<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>AcceptEncodingFilter</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.AcceptEncodingFilter
        </filter-class>
    </filter>

    <filter>
        <filter-name>SessionStart</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.SessionStart
        </filter-class>
    </filter>

    <filter>
        <filter-name>SetUserInfo</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.SetUserInfo
        </filter-class>
    </filter>

    <filter>
        <filter-name>FlashMessage</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.FlashMessage
        </filter-class>
    </filter>

    <filter>
        <filter-name>EnumerateCategories</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.EnumerateCategories
        </filter-class>
    </filter>

    <filter>
        <filter-name>InheritPreviousRequest</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.InheritPreviousRequest
        </filter-class>
    </filter>

    <filter>
        <filter-name>RequireLoginFilter</filter-name>
        <filter-class>
            me.megmilk.myecsite.controllers.filters.RequireLoginFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AcceptEncodingFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SetUserInfo</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>FlashMessage</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SessionStart</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EnumerateCategories</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>InheritPreviousRequest</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/cart</url-pattern>
    </filter-mapping>
</web-app>
